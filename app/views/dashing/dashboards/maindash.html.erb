<% content_for :title do %>
  Device Sniffer Dashboard
<% end %>

<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="macaddresses" data-view="Number" data-title="Total Sightings" </div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="past_hour" data-view="Number" data-title="Total Sightings Past Hour" </div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="past_day" data-view="Number" data-title="Total Sightings Past 24 Hours" </div>
    </li>

    <li data-row="1" data-col="1" data-sizex="4" data-sizey="2">
      <div data-id="manufacturers" data-view="List" data-unordered="true" data-title="Top Manufacturers" data-moreinfo="# of devices around the office"></div>
    </li>
  </ul>
</div>
